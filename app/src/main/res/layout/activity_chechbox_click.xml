<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chechbox_click">

    <TextView
        android:id="@+id/text"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/li"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="SELECT COMPANY"
        android:textColor="#0200FF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="118dp"
        android:layout_height="199dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text">

        <CheckBox
            android:id="@+id/ch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIAA"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/ch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIPRO"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/ch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TCS"
            android:textSize="20dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"></Button>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_checkbox"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="84dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundGravity="center"
        android:gravity="center"
        android:onClick="tejas"
        android:text="SOURCE CODE"
        android:textColor="#000000"
        android:textColorHighlight="#171616"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/li" />

</androidx.constraintlayout.widget.ConstraintLayout>